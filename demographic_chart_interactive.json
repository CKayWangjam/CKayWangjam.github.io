  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": {
    "text": "Demographic Dividend & Decline: Three Countries Compared",
    "subtitle": "Working-age population (15-64) as % of total - India's opportunity vs Japan & Germany's challenge",
    "fontSize": 18,
    "fontWeight": "bold",
    "subtitleFontSize": 13
  },
  "data": {
    "values": [
