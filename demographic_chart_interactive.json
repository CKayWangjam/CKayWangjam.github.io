  },
  "params": [
    {
      "name": "demo_year_slider",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "demo_metric_select",
      "value": "Working_Age_Percent",
      "bind": {
        "input": "select",
        "options": [
          "Working_Age_Percent",
          "Young_Dependency",
          "Old_Dependency",
          "Median_Age"
        ],
        "labels": [
          "Working-Age Population (%)",
          "Youth Dependency Ratio",
          "Elderly Dependency Ratio",
          "Median Age (years)"
        ],
        "name": "Indicator: "
      }
    },
    {
      "name": "demo_country_hover",
      "select": {
        "type": "point",
        "fields": ["Country"],
        "on": "mouseover",
        "clear": "mouseout"
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year <= demo_year_slider"},
    {"calculate": "datum[demo_metric_select]", "as": "Selected_Value"}
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 3.5,
        "point": {
          "size": 100,
          "filled": true
        }
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "scale": {"domain": [1990, 2024]},
          "axis": {
            "title": "Year",
            "titleFontSize": 13,
            "titleFontWeight": "bold",
            "labelFontSize": 11,
            "tickCount": 8,
            "grid": true,
            "gridOpacity": 0.3
          }
        },
        "y": {
          "field": "Selected_Value",
          "type": "quantitative",
          "axis": {
            "title": "Value",
            "titleFontSize": 13,
            "titleFontWeight": "bold",
            "labelFontSize": 11,
            "grid": true,
            "gridOpacity": 0.3
          }
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "domain": ["India", "Japan", "Germany"],
            "range": ["#FF6B35", "#004E89", "#F77F00"]
          },
          "legend": {
            "title": "Country",
            "titleFontSize": 12,
            "titleFontWeight": "bold",
            "labelFontSize": 11,
            "orient": "top-right",
            "offset": 10
          }
        },
        "opacity": {
          "condition": {
            "param": "demo_country_hover",
            "value": 1
          },
          "value": 0.3
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "quantitative", "title": "Year"},
          {"field": "Working_Age_Percent", "type": "quantitative", "title": "Working-Age Pop (%)", "format": ".1f"},
          {"field": "Young_Dependency", "type": "quantitative", "title": "Youth Dependency", "format": ".1f"},
          {"field": "Old_Dependency", "type": "quantitative", "title": "Elderly Dependency", "format": ".1f"},
          {"field": "Median_Age", "type": "quantitative", "title": "Median Age", "format": ".1f"}
        ]
      }
    },
    {
      "transform": [
        {"filter": "datum.Year == demo_year_slider"}
      ],
      "mark": {
        "type": "point",
        "size": 250,
        "filled": true,
        "stroke": "white",
        "strokeWidth": 3
      },
      "encoding": {
        "x": {"field": "Year", "type": "quantitative"},
        "y": {"field": "Selected_Value", "type": "quantitative"},
        "color": {"field": "Country", "type": "nominal", "legend": null},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Year", "type": "quantitative"},
          {"field": "Selected_Value", "type": "quantitative", "title": "Value", "format": ".1f"}
        ]
      }
    }
  ]
}