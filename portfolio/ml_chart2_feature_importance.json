{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 350,
  "height": 300,
  "title": {
    "text": "Standardized Regression Coefficients",
    "subtitle": "Linear model predicting PMKVY placement rates (R² = 0.72)",
    "fontSize": 14,
    "fontWeight": 600,
    "subtitleFontSize": 11,
    "subtitleFontStyle": "italic"
  },
  "data": {
    "values": [
      {"Feature": "Skill Infrastructure", "Coefficient": 0.45, "Impact": "Positive"},
      {"Feature": "Literacy Rate", "Coefficient": 0.38, "Impact": "Positive"},
      {"Feature": "Youth Unemployment", "Coefficient": -0.22, "Impact": "Negative"},
      {"Feature": "Industrial Share", "Coefficient": -0.15, "Impact": "Negative"},
      {"Feature": "GDP Per Capita", "Coefficient": -0.08, "Impact": "Negative"}
    ]
  },
  "layer": [
    {
      "mark": {"type": "bar"},
      "encoding": {
        "y": {
          "field": "Feature",
          "type": "nominal",
          "sort": "-x",
          "axis": {"title": null, "labelFontSize": 11}
        },
        "x": {
          "field": "Coefficient",
          "type": "quantitative",
          "axis": {
            "title": "Standardized Coefficient (β)",
            "titleFontSize": 11,
            "titleFontWeight": 600,
            "grid": true,
            "gridOpacity": 0.3
          }
        },
        "color": {
          "field": "Impact",
          "type": "nominal",
          "scale": {
            "domain": ["Positive", "Negative"],
            "range": ["#93c5fd", "#fca5a5"]
          },
          "legend": {"title": "Effect Direction", "titleFontSize": 11}
        },
        "tooltip": [
          {"field": "Feature", "type": "nominal"},
          {"field": "Coefficient", "type": "quantitative", "format": ".3f"},
          {"field": "Impact", "type": "nominal"}
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "#9ca3af",
        "strokeWidth": 1.5,
        "strokeDash": [4, 4]
      },
      "encoding": {"x": {"datum": 0}}
    }
  ]
}